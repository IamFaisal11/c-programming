#include<stdio.h>
int factorial(int x);
int main() 
{
    int x;
    int ans;
    printf("enter the value of x");
    scanf("%d",&x);
    ans = factorial(x);
    printf("factorial of%d is%d", x, ans);
    return 0;
}
int factorial(int n)
{
    if(n>1) 
    return n*factorial(n-1);
    else
    return 1;
}
    

